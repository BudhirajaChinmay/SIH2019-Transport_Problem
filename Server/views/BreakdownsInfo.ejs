    text-decoration: none;
    cursor: pointer;
}

li ul{
    margin-left: 16px;
    text-align: center;
}

li a:hover {
    background-color: #111;
}

table {
    margin:1em auto;
    border: 1px solid black;
}

 th, td{
    border: 1px solid black;
}

th, td {
    padding: 15px;
}

ol {
    list-style-type: none;
    background-color: beige;
}

#content {
    flex: 1;
}

#main {
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
